{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./src/",
    "lib": ["es6", "es7", "dom"],
    "types": [
      "react"
    ]
  },
  "exclude": ["lib", "build", "node_modules", "sandbox"]
}
